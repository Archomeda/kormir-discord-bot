{
  "name": "kormir-discord-bot",
  "version": "0.0.1",
  "description": "A bot that's powering Legacy of the Six on Discord.",
  "repository": "Archomeda/kormir-discord-bot",
  "author": "Archomeda",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "lint": "xo",
    "test": "mocha test/**/*.spec.js",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha -- test/**/*.spec.js"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.4.7",
    "change-case": "^3.0.1",
    "config": "^1.25.1",
    "discord.js": "^11.0.0",
    "feedparser": "^2.1.0",
    "filesize": "^3.5.6",
    "gw2api-client": "^5.1.0",
    "i18next": "^7.1.0",
    "i18next-node-fs-backend": "^0.1.3",
    "js-yaml": "^3.8.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "moment-timezone": "^0.5.11",
    "mongoose": "^4.8.5",
    "mongoose-sequence": "^3.1.0",
    "mwbot": "^1.0.7",
    "node-cache": "^4.1.1",
    "node-schedule": "^1.2.0",
    "random-js": "^1.0.8",
    "redis": "^2.6.5",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "to-markdown": "^3.0.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-sinon": "^2.8.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "sinon": "^1.17.7",
    "sinon-chai-in-order": "^0.1.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "ignores": [
      "test/**/*"
    ],
    "space": 4,
    "rules": {
      "camelcase": "warn",
      "linebreak-style": "off",
      "no-div-regex": "off",
      "no-else-return": "warn",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-negated-condition": "off",
      "no-prototype-builtins": "off",
      "no-unused-vars": "warn",
      "no-use-extend-native/no-use-extend-native": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": "off"
    }
  }
}
